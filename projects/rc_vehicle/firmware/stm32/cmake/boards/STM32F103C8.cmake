# Blue Pill / STM32F103C8 (Cortex-M3, 64K Flash, 20K RAM) — STM32Cube LL
set(MCU_DEFINE STM32F1)
set(MCU_CFLAGS -mcpu=cortex-m3 -mthumb)
# Путь к STM32CubeF1 (клонировать: git clone --recursive https://github.com/STMicroelectronics/STM32CubeF1.git)
set(CUBE_PATH_VAR STM32CUBE_F1_PATH)
set(CUBE_DEVICE STM32F103xB)
set(CUBE_CHIP_HEADER stm32f103xb.h)
set(STARTUP_ASM startup_stm32f103xb.s)
set(LD_SCRIPT stm32f103xb_flash.ld)
set(HSE_VALUE 8000000)
# Подкаталоги в Cube (GitHub submodules: cmsis_device_f1, stm32f1xx_hal_driver)
set(CMSIS_DEVICE_DIR cmsis_device_f1)
set(HAL_DRIVER_DIR stm32f1xx_hal_driver)
