# Auth Service Environment Configuration
# Для локальной разработки используйте localhost
# Для Docker Compose используйте имена сервисов

ENV=development
APP_NAME=auth-service
HOST=0.0.0.0
PORT=8001

# Database Configuration
# Локально: postgresql://postgres:postgres@localhost:5432/auth_db
# Docker: postgresql://postgres:postgres@postgres:5432/auth_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/auth_db
DB_POOL_SIZE=20

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_TTL_SEC=900
REFRESH_TOKEN_TTL_SEC=1209600

# Password Hashing
BCRYPT_ROUNDS=12

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

